{
    "name": "camunda-worker",
    "version": "1.0.0",
    "keywords": [],
    "author": "Pirtwo",
    "license": "ISC",
    "description": "",
    "engines": {
        "node": ">=18.18"
    },
    "main": "src/main.js",
    "scripts": {
        "start": "node src/main.js",
        "dev": "cross-env NODE_ENV=development nodemon",
        "lint": "eslint .",
        "test": "node --test || echo \"no tests configured\""
    },
    "dependencies": {
        "camunda-external-task-client-js": "^3.1.0",
        "dotenv": "^16.4.5",
        "pino": "^9.2.0",
        "axios": "^1.7.7"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "eslint": "^9.9.0",
        "nodemon": "^3.1.4"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "js,json",
        "ignore": [
            "node_modules",
            "dist"
        ],
        "legacyWatch": true,
        "delay": "200ms",
        "exec": "node -r dotenv/config src/main.js",
        "env": {
            "FORCE_COLOR": "1"
        },
        "signal": "SIGINT"
    }
}
